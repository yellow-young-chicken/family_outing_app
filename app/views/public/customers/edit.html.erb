<h1>プロフィール編集</h1>


<%= flash[:notice] %>

<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
      </ul>
<% end %>

<%= form_with model:@customer, url: customer_path, method: :patch , local: true do |f| %>
  <%= f.label "アカウント名" %>
  <%= f.text_field :account_name %>
  <%= f.label "プロフィール画像" %>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.label "居住地" %>
  <!--@spot_id_pairでspot_nameをidに変換しております。-->
  <%= f.select :spot_id, Spot.spot_names.keys.map {|k| [I18n.t("enums.spot.spot_name.#{k}"), @spot_id_pair[k]]}, include_blank: "選択して下さい"  %>
  <%= f.label "自己紹介" %>
  <%= f.text_area :introduction %>

  <%= f.submit "変更を保存" %>
<% end %>
