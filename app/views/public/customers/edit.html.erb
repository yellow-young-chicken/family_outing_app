<h1>プロフィール編集</h1>


<%= flash[:notice] %>

<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
      </ul>
<% end %>

<%= form_with model:@customer, url: customer_path, local: true do |f| %>
  <label for="inputName">アカウントネーム</label>
  <%= f.text_field :account_name, autofocus: true, id:"inputName", placeholder:"アカウントネーム"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  
  
  
  <%= f.submit "変更を保存" %>
<% end %>
