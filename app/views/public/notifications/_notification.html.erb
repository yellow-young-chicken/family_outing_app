<% visitor = notification.visitor %>
<% visited = notification.visited %>


<div class=col-md-6.mx-auto>
  <div class=form-inline>
    <span>
      <%= link_to customer_path(visitor) do %>
        <%= image_tag visitor.get_profile_image(100,100), class: "icon_mini" %> </span>

        <strong>

          <%= visitor.account_name %>
      <%= 'さん' %></strong>
      <% end %>
      <%= 'が' %>


      <% case notification.action %>
      <% when 'follow' then%>
        <%= "あなたをフォローしました" %>
      <% when 'like' then %>
        <%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;"%>
        <%= "にいいねしました" %>
      <% when 'comment' then%>
        <% if notification.post.customer_id == visited.id%>
          <%= link_to "あなたの投稿", notification.post, style: "font-weight: bold;"%>
        <% else%>
          <%= link_to post_path(notification.post) do%>
            <%= image_tag visitor.get_profile_image(100,100), class: "icon_mini" %>

          <%= notification.post.customer.account_name + 'さんの投稿'%>
          <%end%>
        <%end%>
        <%= "にコメントしました" %>
        <p text-muted.mb-0><%= Comment.find_by(id: notification.comment_id)&.comment %></p>
      <%end%>

  <p small.text-muted.text-right >
    <%= time_ago_in_words(notification.created_at).upcase %></p>
    </div>
  </div>
  <hr>





