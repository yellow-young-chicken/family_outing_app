<div class= "index-background-image">
  <h2 class="m-4 text-center font-weight-bold">Follower Users</h2>
<% if @customers.exists? %>
           <table class="table">
           <thead>
             <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
             </tr>
            </thead>

            <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td>
                  <%= image_tag customer.get_profile_image(100,100) %>
                </td>
                <td>
                  <%= customer.account_name %>
                </td>
                <td>
                  <%= render "public/relationships/relationships", customer: customer %>
                </td>
                <td>
                  <%= link_to 'Show', customer_path(customer.id),class:"btn btn-primary" %>
                </td>


              </tr>
            <% end %>

            </tbody>




         </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>

</div>
