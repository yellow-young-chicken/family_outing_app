<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前" %>
    <%= f.label :"（姓）" %>
    <%= f.text_field :last_name, autofocus: true, :placeholder => "令和" %>
    <%= f.label :"（名）" %>
    <%= f.text_field :first_name, :placeholder => "太郎" %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.label :"(セイ)" %>
    <%= f.text_field :last_name_kana, :placeholder => "レイワ"  %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kana, :placeholder => "タロウ" %>
  </div>

  <div class="field">
    <%= f.label :"アカウント名" %>
    <%= f.text_field :account_name, :placeholder => "アカウント名" %>
  </div>

    <div class="field">
    <%= f.label "居住地" %>
    <%= f.select :spot_id, Spot.spot_names.keys.map {|k| [I18n.t("enums.spot.spot_name.#{k}"), Spot.pluck('spot_name, id').to_h[k]]}, include_blank: "選択して下さい"  %>
    </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, :placeholder => "sample@example.com", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, :placeholder => "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード６文字以上" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "新規会員登録" %>
  </div>
<% end %>

  <h5>既に登録済みの方</h5>
  <div>
    <%= link_to "こちら", new_customer_session_path %> からログインしてください。
  </div>
